<Window x:Class="LSS.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LSS"
        mc:Ignorable="d"
        Title="SplashScreen" Height="500" Width="800"
        WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Image HorizontalAlignment="Left" Height="500" VerticalAlignment="Top" Width="800" Source="/Lightning-cropped.jpg" Stretch="Fill"/>
        <Label Name="AJHSoftwareLabel" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" Content="Developed by AJH Software" Foreground="White"/>
        <Image HorizontalAlignment="Center" Height="100" Margin="0,150,0,0" VerticalAlignment="Top" Width="200" Source="/LSS-logo-oval.png"/>
        <Label Name="versionLabel" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20" Background="White"/>
    </Grid>
</Window>
